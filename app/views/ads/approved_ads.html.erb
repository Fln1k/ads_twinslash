<h1>Listing new ads</h1>

<table border="1">
  <tr>
    <th>Description</th>
    <th>Name</th>
    <th>Status</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.description %></td>
    <td><%= ad.name %></td>
    <td><%= ad.state_name %></td>
    <td><%= get_name_of_type(@types, ad.ads_type_id.to_i)%></td>
    <td><%= link_to 'Show', ad %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @ads %>
